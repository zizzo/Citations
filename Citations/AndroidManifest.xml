<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.citations"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" >
    </uses-permission>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>
    <uses-permission android:name="android.permission.READ_LOGS" >
    </uses-permission>

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:name="com.citations.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/citations"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <provider 
            android:authorities="com.facebook.app.NativeAppCallContentProvider255336384659655" 
            android:name="com.facebook.NativeAppCallContentProvider" />
        
        <activity
            android:name="com.citations.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.citations.CitationsWidgetProvider$MyUpdateService"
            android:configChanges="keyboardHidden|orientation"
            android:enabled="true"
            android:icon="@drawable/citations"
            android:isolatedProcess="false"
            android:label="@string/app_name"
            android:process="com.citations.MainActivity" >
        </service>

        <receiver android:name="com.citations.CitationsWidgetProvider" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/appwidget_info" />
        </receiver>

        <activity
            android:name="com.citations.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName="com.citations.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.citations.MainActivity" />
        </activity>
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/app_id"/>
    </application>

</manifest>
