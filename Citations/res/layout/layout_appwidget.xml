<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_appwidget_LinearLayoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin" >

    <LinearLayout
        android:id="@+id/layout_appwidget_linearLayoutText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/layout_appwidget_TextViewSentence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp" />

        <TextView
            android:id="@+id/layout_appwidget_TextViewAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="10dp"
            android:text=""
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/layout_appwidget_linearLayoutButtons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/layout_appwidgetLinearLayoutButtonsChangeCat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/layout_appwidget_imageButtonPrevious"
                    android:layout_width="28dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_launcher" 
                    android:contentDescription="@string/contentDescriptionButtonPrevious"/>

                <ImageButton
                    android:id="@+id/layout_appwidget_imageButtonNext"
                    android:layout_width="34dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_launcher" 
                    android:contentDescription="@string/contentDescriptionButtonNext"/>

                <ImageButton
                    android:id="@+id/layout_appwidget_imageButtonRefresh"
                    android:layout_width="30dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_launcher" 
                    android:contentDescription="@string/contentDescriptionButtonRefresh"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/layout_appwidget_imageViewInspiringPoint"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@color/inspiringCategoryColor"
                    android:contentDescription="@string/contentDescriptionInspiringPoint"/>
                <ImageView
                    android:id="@+id/layout_appwidget_imageViewLifePoint"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@color/lifeCategoryColor"
                    android:contentDescription="@string/contentDescriptionLifePoint"/>
                <ImageView
                    android:id="@+id/layout_appwidget_imageViewPoliticsPoint"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@color/politicsCategoryColor"
                    android:contentDescription="@string/contentDescriptionPoliticsPoint"/>
                <ImageView
                    android:id="@+id/layout_appwidget_imageViewLovePoint"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@color/loveCategoryColor"
                    android:contentDescription="@string/contentDescriptionLovePoint"/>
                <ImageView
                    android:id="@+id/layout_appwidget_imageViewFunPoint"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@color/funCategoryColor"
                    android:contentDescription="@string/contentDescriptionFunPoint"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_appwidgetLinearLayoutButtonsShare"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="right"
            android:padding="10dp" >

            <ImageButton
                android:id="@+id/layout_appwidgetImageButtonTwitter"
                android:layout_width="38dp"
                android:layout_height="34dp"
                android:contentDescription="@string/twitterButton"
                android:src="@drawable/ic_launcher" />

            <ImageButton
                android:id="@+id/layout_appwidgetImageButtonFacebook"
                android:layout_width="40dp"
                android:layout_height="36dp"
                android:contentDescription="@string/twitterButton"
                android:src="@drawable/ic_launcher" />

            <ImageButton
                android:id="@+id/layout_appwidgetImageButtonShare"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/sharingButton"
                android:src="@drawable/share" />
        </LinearLayout>

	</LinearLayout>
	    
</LinearLayout>
